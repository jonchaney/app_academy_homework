<form action="<%= cats_url %>" method="post">

  <label for="name">Name</label>
  <input id="name" type="text" name="cat[name]">

  <br><br>

  <label for="color">Cat Color</label>
  <select id="color" name="cat[color]">
    <option disabled selected >-- <%= @cat.color %>--</option>
    <option value="grey">Grey</option>
    <option value="orange">Orange</option>
    <option value="black">Black</option>
    <option value="brown">Brown</option>
  </select>

  <br><br>

  <label for="male">Male</label>
  <input
    id="male"
    type="radio"
    name="cat[sex]"
    value="M">

  <label for="female">Female</label>
  <input
    id="female"
    type="radio"
    name="cat[sex]"
    value="F">


  <br><br>

  <label for="description">Description
    <textarea
      id="description" name="cat[description]">
    </textarea>
</label>

  <br><br>

  <label for='birth_date'>Birth Date</label>
  <input
    id="birth_date"
    type="date"
    name="cat[birth_date]">

  <input
    type="submit" value="Update Cat">
</form>
